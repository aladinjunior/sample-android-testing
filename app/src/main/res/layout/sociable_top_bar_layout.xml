<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_size"
    android:background="@color/surface_container">

    <ImageView
        android:layout_width="@dimen/component_width_big"
        android:layout_height="@dimen/component_height_medium"
        android:layout_marginVertical="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_small"
        android:contentDescription="@string/app_name"
        android:src="@drawable/sociable_logo_typo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_small"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/phone_call_icon_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/phone_call_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_small"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_phone_call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user_profile_icon_image"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/user_profile_icon_image"
        android:layout_width="@dimen/component_big_size"
        android:layout_height="@dimen/component_big_size"
        android:layout_marginEnd="@dimen/spacing_small"
        android:background="@drawable/circle_mask"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/component_sbig_size"
            android:layout_height="@dimen/component_sbig_size"
            android:layout_gravity="center"
            android:background="@color/material_dynamic_primary10"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_22"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageStyle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>